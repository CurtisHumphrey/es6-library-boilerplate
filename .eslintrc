{
  "extends": "standard",
  "env"     : {
    "browser" : true,
    "mocha" : true
  },
  "globals" : {
    "expect" : false,
    "should" : false,
    "sinon"  : false
  },
  "rules": {
    "array-bracket-spacing": 0,
    "camelcase": 0,
    "comma-dangle" : [2, "always-multiline"],
    "complexity"   : [2, 6],
    "curly"        : [2, "multi-line", "consistent"],
    "func-names"   : 0,
    "jsx-boolean-value" : 0,
    "jsx-quotes"   : [2, "prefer-single"],
    "key-spacing"  : 0,
    "max-depth"        : [2, 3],
    "max-len"          : [2, 150],
    "max-params"       : [2, 3],
    "max-statements"   : [2, 15],
    "no-else-return"   : 2,
    "no-multi-spaces"  : 2,
    "one-var"          : [2, "never"],
    "quotes"           : [2, "single"],
    "semi"         : [2, "always"],
    "space-before-function-paren" : 2,
    "consistent-return": 2,
    "no-fallthrough": 2,
    "dot-location": [2, "property"],
    "dot-notation": 2,
    "eqeqeq": [2, "allow-null"],
    "guard-for-in": 2,
    "no-case-declarations": 2,
    "no-eval": 2,
    "no-implied-eval": 2,
    "no-extend-native": 2,
    "no-native-reassign": 2,
    "no-loop-func": 2,
    "no-magic-numbers": [2, {ignore: [0, 1]}]
  }
}
